/* pages/headInfo/headInfo.wxss */
.ido-headInfo {
  height: 100vh;
  overflow: hidden;
}
.ido-headInfo .top {
  font-size: 13px;
  text-align: right;
  margin-right: 10px;
  /* margin-bottom: 3px; */
  /* padding-bottom: 3px; */
  /* text-decoration: underline; */
}
.ido-headInfo .image {
  width: 150px;
  height: 150px;
  border-radius: 50%;
  border: 1px solid #f5f5f5;
  margin: 10px auto;
  margin-top: 20px;
}
.ido-headInfo .image image{
  margin: 15px;
  width: 120px;
  height: 120px;
  border-radius: 50%;
}
.ido-headInfo .nickname{
  text-align: center;
  font-weight: bold;
}
.ido-headInfo .current {
  height: 15vh;
  display: flex;
  justify-content: center;
  align-items: center;
}
.ido-headInfo .current-text {
  font-size: 15px;
  margin-right: 10px;
}
.current-cover {
    width: 60vw;
     height: 10vh;
     display: flex;
     align-items: center;
     position: relative;
    /* line-height: 15vh;  */
}
.ido-headInfo .current-loading {
  /* margin-top: 7.5vh; */
   position: relative;
   overflow: hidden;    
  width: 60vw;
  height: 1vh;
  border-radius: 5px;
  /* box-shadow: 1px 2px 3px #8f949a; */
  background: linear-gradient(to right, #b79393 0%, #b79393 18%,#fff 18%, #fff 20%,#b79393 20%, #b79393 38%, #fff 38%, #fff 40%, #b79393 40%, #b79393 58%, #fff 58%, #fff 60%, #b79393 60%,#b79393 78%,#fff 78%, #fff 80%, #b79393 80%, #b79393 100%)
}
.ido-headInfo .current-loading::before {
  position: absolute;
  content: '';
  /* left: 15px; */
  width: 60vw;
  height: 1vh;
  border-radius: 5px;
  z-index: 3;
  /* background: #000; */
   background: linear-gradient(to right, transparent 0%, transparent 18%,#fff 18%, #fff 20%,transparent 20%, transparent 38%, #fff 38%, #fff 40%, transparent 40%, transparent 58%, #fff 58%, #fff 60%, transparent 60%,transparent 78%,#fff 78%, #fff 80%, transparent 80%, transparent 100%) 
}
.ido-headInfo .current-loading .current-pos {
  z-index: 2;
  position: absolute;
  width: 60vw;
  height: 1vh;
  background-color: #ff3b3b;
  right: 20%;  
}
.ido-headInfo .current-nick {
  background: url('http://oz3on0sof.bkt.clouddn.com/dialog.png');
  background-size: 100% 100%;
  position: absolute;
   bottom: 50%; 
  font-size: 10px;
  width: 60px;
  left: -10px;
  text-align: center;
  height: 30px;
  line-height: 25px;
  /* right: -44px; */
  /* line-height: 20px; */
  /* border: 1px solid #000; */
}
.ido-headInfo .headInfo-foot {
  display: flex;
  align-items: center;
  justify-content: space-between;
    /* height: 18vh;   */
  font-size: 23px;
  width: 60vw;
  margin: 0 auto;
}
.ido-headInfo .headInfo-foot .left{
  position: relative;
}
.ido-headInfo .headInfo-foot .left::after {
  position: absolute;
  content: '';
  left: 80px;
   top: 75px; 
  width: 50px;
  height: 1px;
  border-top: 1px solid #B9B9B9;
  transform: rotate(90deg);
}
.ido-headInfo .headInfo-foot .left view,.ido-headInfo .headInfo-foot .right view{
  margin: 30px 0;
  /* position: relative; */
}

.ido-headInfo .headInfo-content{
  text-align: center;
  font-weight: bold;
}
.ido-headInfo .headInfo-bottom {
  width: 120px;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 6vh;  
}
.ido-headInfo .headInfo-bottom .pre {
  padding: 3px 5px;
  font-size: 12px;
  border-radius: 5px;
  background-color: #bd1313;
  color: #fff;
}
.ido-headInfo .headInfo-preview {
  display: flex;
  width: 120vw;
  background: #fff;
}
.headInfo-scroll {
  transition: all 1s cubic-bezier(0.075, 0.82, 0.165, 1);
}
.ido-headInfo .headInfo-preview .item {
    /* flex-basis: ;   */
    position: relative;
    width: 90px;
     height: 80px; 
    font-size: 16px;
    z-index: 200;
}
.ido-headInfo .headInfo-preview .item view {
  /* text-align: center; */
}
.ido-headInfo .headInfo-preview .item .item-needDay {
  font-size: 14px;
  /* text-align: center; */
  margin-left: 5px;
}
.ido-headInfo .headInfo-preview .item .item-pre {
  font-size: 10px;
  width: 10px;
  height: 13px;
  border-radius: 5px;
  padding: 2px 3px;
  color: #fff;
  background-color: #bd1313;
}
.ido-headInfo .headInfo-preview .item:first-of-type {
  margin-left: 20px;
}
.ido-headInfo .headInfo-preview .item:nth-of-type(2) {
  /* color: #f6f3e1; */
}
.ido-headInfo .headInfo-preview .item:nth-of-type(2)::after {
  /* background-color: #bdb0aa; */
}
.ido-headInfo .headInfo-preview .item::after{
    z-index: 1;
    position: absolute;
    content: '';
    width: 20vw;
    height: 12vh;
    top: 0px;
    left: 0px;
    /* background-color: #000; */
    border: 1px solid #b5b5b5;
    transform: skewX(-25deg);
}

.ido-headInfo .headInfo-preview .item .item-pre{
  margin-top: 10px;
  margin-left: 20px;
}
.ido-headInfo .headInfo-preview .item .item-nick{
  margin-left: 3px;
  margin-top: 2px;
}